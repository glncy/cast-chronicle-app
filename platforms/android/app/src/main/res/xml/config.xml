<?xml version='1.0' encoding='utf-8'?>
<widget id="com.castchronicle.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>Cast Chronicle</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@castchronicle.com" href="http://castchronicle.com">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="res/icon/android/icon.png" />
    <allow-intent href="market:*" />
    <splash density="land-hdpi" src="res/screen/android/splash-land.png" />
    <splash density="land-ldpi" src="res/screen/android/splash-land.png" />
    <splash density="land-mdpi" src="res/screen/android/splash-land.png" />
    <splash density="land-xhdpi" src="res/screen/android/splash-land.png" />
    <splash density="port-hdpi" src="res/screen/android/splash-port.png" />
    <splash density="port-ldpi" src="res/screen/android/splash-port.png" />
    <splash density="port-mdpi" src="res/screen/android/splash-port.png" />
    <splash density="port-xhdpi" src="res/screen/android/splash-port.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreen" value="foo" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true|false" />
    <preference name="SplashShowOnlyFirstTime" value="true|false" />
</widget>
